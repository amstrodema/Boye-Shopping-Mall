    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <!-- Footer Start-->
        <div class="footer-area footer-padding">
            <div class="container">
                <div class="row d-flex justify-content-between">
                    <div class="col-xl-3 col-lg-3 col-md-5 col-sm-6">
                        <div class="single-footer-caption mb-50">
                            <div class="single-footer-caption mb-30">
                                <!-- logo -->
                                <div class="footer-logo">
                                    <a asp-action="Index" asp-controller="Home" class="brandName"><span>Boye Shopping</span> Mall</a>
                                </div>
                                <div class="footer-tittle">
                                    <div class="footer-pera">
                                        <p>Boye Shopping Mall is a leading online retail platform that offers a seamless and convenient shopping experience to customers nationwide.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-3 col-sm-5">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <h4>Quick Links</h4>
                                <ul>
                                    <li><a asp-action="About" asp-controller="Home">About</a></li>
                                    <li><a asp-action="Index" asp-controller="Shop">Shopping Mall</a></li>
                                    <li><a asp-action="Cart" asp-controller="Shop">Shopping Cart</a></li>
                                    <li><a asp-action="Contact" asp-controller="Home">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-7">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <h4>Categories</h4>
                                <ul>
                                    @foreach (var item in _db.Categories.Take(4).ToList())
                                    {
                                        <li><a asp-action="Index" asp-controller="Shop" asp-route-id="@item.ID">@item.Name</a></li>
                                    }
                                    <li><a asp-action="Index" asp-controller="Shop" asp-route-id="">More Categories</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-5 col-sm-7">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <h4>Support</h4>
                                <ul>
                                    <li><a onclick="askQuestions()">Chat With Us</a></li>
                                    <li><a href="tel:08060473710">08060473710</a></li>
                                    <li><a href="tel:08093077268">08093077268</a></li>
                                    <li><a href="mailto:boyeshoppingmall@gmail.com">boyeshoppingmall@gmail.com</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Footer bottom -->
                <div class="row">
                    <p class="text-center" style="width:100%; background-color: #eee;">
                        <small>
                            D'ARLOS VALLEY &copy; <script>document.write(new Date().getFullYear());</script> <br /> All rights reserved
                        </small>
                    </p>
                </div>
            </div>
        </div>
        <!-- Footer End-->
    </footer>
    <!--? Search model Begin -->
    <div class="search-model-box">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-btn">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Searching key.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->
    @await RenderSectionAsync("Scripts", required: false)
    <!-- JS here -->

    <script src="~/assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
